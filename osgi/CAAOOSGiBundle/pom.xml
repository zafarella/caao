<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <name>caao-osgi-bundle</name>
    <groupId>fi.uef.cs.caao</groupId>
    <artifactId>caao-osgi-bundle</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>bundlle</packaging>


    <parent>
        <groupId>fi.uef.cs.caao</groupId>
        <artifactId>caao-osgi-bundle-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>${bundle.namespace}</Export-Package>
                        <Private-Package>!${bundle.namespace}</Private-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <bundle.namespace>${pom.groupId}.${pom.artifactId}</bundle.namespace>
    </properties>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>1.5</version>
            </dependency>
            <!--framework.jar-->
            <dependency>
                <groupId>org.knopflerfish</groupId>
                <artifactId>framework</artifactId>
                <version>5.3.3</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>